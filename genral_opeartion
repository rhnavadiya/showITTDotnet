
//Q1 : write a program of fiest 10 natural number of sum.

int a = 0;
for (int i = 1; i <= 10; i++)
{
    a = a + i;

}
Console.WriteLine(a);

//Q2 : write c# sarp p rogram to read 10 numbers amd find their avrage and sum

int avg, value;
value = 0;
int j = 1;


while (j <= 10)
{
    Console.WriteLine("number{0}", j);
    var c = Convert.ToInt32(Console.ReadLine());

    value = value + c;

    j++;
}

avg = value / 10;

Console.WriteLine("This 10 number's sum  is:{0} and average is:{1}", value, avg);


//Q4

Console.WriteLine("today is which day????");
string day = Console.ReadLine();

switch (day)
{
    case "Monday":
        Console.WriteLine("today is Monday");
        break;
    case "Tuesday":
        Console.WriteLine("today is Tuesday");
        break;
    case "Wednesday":
        Console.WriteLine("today is wednesday");
        break;
    case "Thursday":
        Console.WriteLine("today is Thursday");
        break;
    case "friday":
        Console.WriteLine("today is friday");
        break;
    case "saturday":
        Console.WriteLine("today is saturday");
        break;
    case "sunday":
        Console.WriteLine("today is sunday");
        break;
}

